<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Short URL</title>
  <style>
    :root {
      --bg-color: #1e1e2f;
      --text-color: #e0e0e0;
      --box-bg: #1e1e2f;
      --input-bg: #1e1e2f;
      --shadow-light: #282845;
      --shadow-dark: #141421;
      --hover-bg: #292944;
      --link-color: #58a6ff;
      --table-bg: white;
      --table-head-color: black;
      --table-text-color: black;
      --hover-row: #2a2a3e;
    }

    body.light {
      --bg-color: #f0f0f0;
      --text-color: #111;
      --box-bg: #fff;
      --input-bg: #fff;
      --shadow-light: #ddd;
      --shadow-dark: #aaa;
      --hover-bg: #eee;
      --link-color: #007bff;
      --table-bg: #fff;
      --table-head-color: #000;
      --table-text-color: #000;
      --hover-row: #f9f9f9;
    }

    * {
      box-sizing: border-box;
    }

    body {
      background: var(--bg-color);
      color: var(--text-color);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      transition: background 0.4s, color 0.4s;
    }

    .container {
      background: var(--box-bg);
      border: 1px solid var(--text-color);
      border-radius: 30px;
      box-shadow: 20px 20px 60px var(--shadow-dark), -20px -20px 60px var(--shadow-light);
      padding: 40px;
      max-width: 900px;
      width: 100%;
    }

    h1 {
      text-align: center;
      font-weight: 700;
      font-size: 2.5rem;
      margin-bottom: 40px;
    }

    .theme-toggle {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 20px;
    }

    .theme-toggle label {
      cursor: pointer;
      font-size: 1rem;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .theme-toggle input {
      transform: scale(1.3);
    }

    form {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      justify-content: center;
      margin-bottom: 40px;
    }

    input[type="url"] {
      flex: 1;
      min-width: 250px;
      padding: 15px 20px;
      border: 1px solid var(--text-color);
      border-radius: 20px;
      background: var(--input-bg);
      color: var(--text-color);
      box-shadow: inset 8px 8px 16px var(--shadow-dark), inset -8px -8px 16px var(--shadow-light);
      transition: all 0.4s ease;
    }

    input[type="url"]::placeholder {
      color: #aaa;
    }

    input[type="url"]:focus {
      outline: none;
      background: var(--hover-bg);
      transform: scale(1.02);
      box-shadow: 0 0 15px #007bff80;
    }

    button {
      padding: 15px 30px;
      border: 1px solid var(--text-color);
      border-radius: 20px;
      background: var(--box-bg);
      color: var(--text-color);
      box-shadow: 8px 8px 16px var(--shadow-dark), -8px -8px 16px var(--shadow-light);
      font-weight: bold;
      transition: all 0.3s ease;
    }

    button:hover {
      background: var(--hover-bg);
      transform: scale(1.05);
      box-shadow: 0 0 15px var(--link-color);
      cursor: pointer;
    }

    table {
      background-color: var(--table-bg);
      width: 100%;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 8px 8px 16px var(--shadow-dark), -8px -8px 16px var(--shadow-light);
      color: var(--table-text-color);
    }

    thead {
      background-color: var(--table-bg);
      color: var(--table-head-color);
    }

    th, td {
      text-align: center;
      padding: 15px;
      border-bottom: 1px solid #ccc;
    }

    tbody tr:hover {
      background-color: var(--hover-row);
      transition: 0.3s;
    }

    td a {
      color: var(--link-color);
      text-decoration: none;
    }

    td a:hover {
      color: var(--text-color);
      text-decoration: underline;
    }

    @media (max-width: 576px) {
      form {
        flex-direction: column;
        align-items: stretch;
      }

      input[type="url"], button {
        width: 100%;
      }

      h1 {
        font-size: 2rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="theme-toggle">
      <label>
        ðŸŒ™ Dark Mode
        <input type="checkbox" id="modeToggle">
      </label>
    </div>

    <h1>ðŸ”— URL Shrinkener</h1>
    <form action="/shortUrls" method="POST">
      <input type="url" name="fullUrl" id="fullUrl" placeholder="Enter your long URL..." required>
      <button type="submit">Shrink</button>
    </form>

    <table>
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% ShortUrls.forEach(url => { %>
          <tr>
            <td><a href="<%= url.full %>" target="_blank"><%= url.full %></a></td>
            <td><a href="<%= url.short %>" target="_blank"><%= url.short %></a></td>
            <td><%= url.clicks %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <script>
    const toggle = document.getElementById("modeToggle");
    const body = document.body;

    // Load theme from localStorage
    if (localStorage.getItem("theme") === "light") {
      body.classList.add("light");
      toggle.checked = true;
    }

    toggle.addEventListener("change", () => {
      if (toggle.checked) {
        body.classList.add("light");
        localStorage.setItem("theme", "light");
      } else {
        body.classList.remove("light");
        localStorage.setItem("theme", "dark");
      }
    });
  </script>
</body>
</html>
